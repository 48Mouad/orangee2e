{
  "name": "orange-e2e",
  "version": "1.0.0",
  "private": true,
  "description": "Cypress E2E tests for Orange Maroc prepaid SIM/eSIM purchase flow",
  "scripts": {
    "postinstall": "node scripts/postinstall.js",
    "cy:open": "cypress open",
    "cy:run": "cypress run --browser chrome --headless --spec \"cypress/e2e/**/*.cy.js\" --env SLOW=0 --config video=false,screenshotOnRunFailure=true,trashAssetsBeforeRuns=true -- --disable-gpu --disable-dev-shm-usage --no-sandbox --window-size=1366,768",
    "test": "npm run cy:run",
    "test:headed": "cypress run --headed --browser chrome",
    "lighthouse": "node scripts/lighthouse.js",
    "zap:baseline": "echo \"(Optional) Run OWASP ZAP baseline in CI.\"",
    "report:regen": "npx mochawesome-merge \"cypress/reports/**/mochawesome*.json\" > cypress/reports/_merged.json && npx marge cypress/reports/_merged.json --reportDir cypress/reports --inline",
    "report:open": "node -e \"require('child_process').exec(process.platform==='win32'?'start cypress\\\\reports\\\\report.html':(process.platform==='darwin'?'open cypress/reports/report.html':'xdg-open cypress/reports/report.html'))\""
  },
  "devDependencies": {
    "cypress": "^13.10.0",
    "cypress-file-upload": "^5.0.8",
    "cypress-mochawesome-reporter": "^4.0.2",
    "lighthouse": "^12.0.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "rimraf": "^5"
  },
  "dependencies": {
    "nodemailer": "^6.10.1"
  }
}
